<%- include("partials/header.ejs") %>

  <% if (items.length!==0) { %>
  <ul>
    <% for (let i=items.length-1;i>=0;i--) { %>
      <li>
        <a href="/post/<%= items[i].id %>">
        <%= items[i].title + ", " + items[i].postdate%>
        <% if (items[i].editDate) { %>
         (edited: <%- items[i].editDate %>)
        <% } %>	
        </a>
      </li><br>
    <% } %>
  </ul>
  <% } else { %>
    <p>no posts!</p>
  <% } %>

  <br><br>
  <form action="/new" method="GET">
    <input type="submit" value="**new post**">
  </form>
<%- include("partials/footer.ejs")%>
